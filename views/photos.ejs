<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

   <!-- body -->

   <body class="main-layout inner_page">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="images/loading.gif" alt="#" /></div>
      </div>
      <!-- end loader -->

      <!-- header -->
      <%- include('./partials/header.ejs') %>

         <!-- end header inner -->
         <!-- gallery -->
         <div class="gallery">
            <div class="container_with">
               <div class="row">
                  <div class="col-md-12">
                     <div class="titlepage text_align_center">
                        <h2>Our gallery</h2>
                     </div>
                  </div>
               </div>
               <div class="tz-gallery">
                  <div class="row mx-4">

                     <% photos.forEach(photo=> { %>
                        <div class="col-lg-4 col-md-6 ma_bottom30" style="min-height: 250px;">
                           <div class="lightbox d-flex flex-direction-column align-items-center justify-content-md-center w-100 h-100">
                              <a href="/photo/<%= photo.id %>">
                                 <img src="<%= photo.url %>" alt="<%= photo.name %>" class="img-fluid">
                              </a>
                              <div class="view_main">
                                 <div class="">
                                    <h3 class="py-1"><a href="/photo/<%= photo.id %>"><%= photo.name %></a></h3>
                                    <p class="p-2"><%= photo.description.substring(0, 60) + "..." %></p>
                                 </div>
                              </div>
                           </div>
                        </div>

                        <% }) %>
                  </div>
               </div>
            </div>
         </div>
         <!-- end gallery -->
         <!-- end footer -->
         <%- include('./partials/footer.ejs') %>
            <!-- end footer -->
            <!-- Javascript files-->
            <%- include('./partials/scripts.ejs') %>

   </body>

</html>