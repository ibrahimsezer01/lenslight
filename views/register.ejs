<!DOCTYPE html>
<html lang="en">
   <%- include('./partials/head.ejs') %>

   <!-- body -->
   <body class="main-layout inner_page">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="images/loading.gif" alt="#"/></div>
      </div>
      <!-- end loader -->
     
         <!-- header -->
         <%- include('./partials/header.ejs') %>

         <!-- end header inner -->
      <!-- contact -->
        <div class="contact mb-4">
          <div class="container">
            <div class="row">
              <div class="col-md-12 ">
                <div class="titlepage text_align_center">
                  <h2>Register</h2>
                </div>
              </div>
              <div class="col-md-8 offset-md-2">
                <form id="request" class="main_form" method="post">
                  <div class="row">

                    <div class="col-md-12">
                      <div style="display: none;" class="alert alert-danger" id="usernameAlert"></div>
                    </div>
                    <div class="col-md-12">
                      <input class="form_control" placeholder="User Name" type="text" name="username"> 
                    </div>

                    <div class="col-md-12">
                      <div style="display: none;" class="alert alert-danger" id="emailAlert"></div>
                    </div>
                    <div class="col-md-12">
                      <input class="form_control" placeholder="Email" type="email" name="email">                          
                    </div>

                    <div class="col-md-12">
                      <div style="display: none;" class="alert alert-danger" id="passwordAlert"></div>
                    </div>
                    <div class="col-md-12">
                      <input class="form_control" placeholder="Password" type="password" name="password">                          
                    </div>

                    <div class="col-md-12">
                      <div class="group_form">
                        <button class="send_btn">Register</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      <!-- end contact -->
      <!-- end footer -->
      <%- include('./partials/footer.ejs') %>
      <!-- end footer -->
      <!-- Javascript files-->
      <%- include('./partials/scripts.ejs') %>
      <script src="js/register-validation.js"></script>

   </body>
</html>