<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

  <!-- body -->

  <body class="main-layout inner_page">
    <!-- loader  -->
    <div class="loader_bg">
      <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->

    <!-- header -->
    <%- include('./partials/header.ejs') %>

      <!-- end header inner -->

      <!--  customers -->
      <div class="customers">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="titlepage text_align_center">
                <h2>Welcome <%= user.username %>
                </h2>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="satteb text_align_center">
                <p>fact that a reader will be distracted by the readable content of a page when looking at its layout.
                  The point of using Lorem Ipsum is that itfact that a reader will be distracted by the readable content
                  of a page when looking at its layout.</p>
                <h3>The point of using </h3>
                <i><img src="/images/custo.jpg" alt="#" /></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end customers  -->

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="text_align_center">

              <% if (inFollowers) { %>
                <a href="/user/<%= user._id %>/unfollow?_method=PUT" style="margin: 20px auto;" class="read_more">UNFOLLOW</a>
              <% } else { %>
                <a href="/user/<%= user._id %>/follow?_method=PUT" style="margin: 20px auto;" class="read_more">FOLLOW</a>
              <% } %> 

            </div>
          </div>
        </div>
      </div>


      <!-- gallery -->
      <div class="gallery">
        <div class="container_with">
          <div class="row">
            <div class="col-md-12">
              <div class="titlepage text_align_center">
                <h2>My Photos</h2>
              </div>
            </div>
          </div>
          <div class="tz-gallery">
            <div class="row mx-4">

              <% photos.forEach(photo=> { %>
                <div class="col-lg-4 col-md-6 ma_bottom30">
                  <div class="lightbox">
                    <img src="<%= photo.url %>" alt="<%= photo.name %>">
                    <div class="view_main">
                      <div class="pose">
                        <a class="read_more" href="/photo/<%= photo._id %>"><img src="images/ga.png" alt="#" /></a>
                        <h3 class="py-1">
                          <%= photo.name %>
                        </h3>
                        <p class="p-2">
                          <%= photo.description.substring(0, 100) + "..." %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

                <% }) %>
            </div>
          </div>
        </div>
      </div>
      <!-- end gallery -->



      <!-- end footer -->
      <%- include('./partials/footer.ejs') %>
        <!-- end footer -->

        <!-- Javascript files-->
        <%- include('./partials/scripts.ejs') %>

  </body>

</html>