<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

   <!-- body -->

   <body class="main-layout inner_page">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="images/loading.gif" alt="#" /></div>
      </div>
      <!-- end loader -->

      <!-- header -->
      <%- include('./partials/header.ejs') %>

         <!-- end header inner -->
         <!-- team -->
         <div class="team mb-4">
            <div class="container_with">
               <div class="row">
                  <div class="col-md-12">
                     <div class="titlepage text_align_center">
                        <h2>Users</h2>
                     </div>
                  </div>

                  <% users.forEach(user => { %>
                     <div class="col-md-4">
                        <div class="team_box text_align_center">
                           <div class="team_img">
                              <figure><a href="/user/<%= user._id %>"><img src="images/team1.jpg" alt="#" /></a></figure>
                           </div>
                           <div class="craig">
                              <h3><%= user.username %></h3>
                              <span>PHOTOGRAPHER</span>
                              <ul class="social_icon ">
                                 <li><a href="Javascript:void(0)"><i class="fa-brands fa-facebook" aria-hidden="true"></i></a></li>
                                 <li><a href="Javascript:void(0)"><i class="fa-brands fa-twitter" aria-hidden="true"></i></a></li>
                                 <li><a href="Javascript:void(0)"><i class="fa-brands fa-linkedin" aria-hidden="true"></i></a></li>
                              </ul>
                           </div>
                        </div>
                     </div>
                  <% }) %>

               </div>
            </div>
         </div>
         <!-- end team -->
         <!-- end footer -->
         <%- include('./partials/footer.ejs') %>
            <!-- end footer -->
            <!-- Javascript files-->
            <%- include('./partials/scripts.ejs') %>

   </body>

</html>